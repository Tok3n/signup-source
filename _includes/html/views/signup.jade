.view-wrapper#signupHome

  .container-fluid.info-box
    h1.text-center.text-weight-light Sign Up For Tok3n Today

  form.signup-form.container-fluid(role='form')
    .row
      .col-md-6
        .form-group
          label.sr-only(for='firstNameInput') First Name
          input#firstNameInput.form-control(type='text', placeholder='First name', required)
      .col-md-6
        .form-group
          label.sr-only(for='lastNameInput') Last name
          input#lastNameInput.form-control(type='text', placeholder='Last name', required)
    .row
      .col-md-12
        .form-group
          label.sr-only(for='emailInput') Email address
          input#emailInput.form-control(type='email', placeholder='Email address', required)
