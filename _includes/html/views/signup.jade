    .row
      .col-md-12
        .form-group
          h3.text-center.text-weight-light Choose a verification option
          .btn-group.btn-group-table(data-toggle="buttons")
            label.btn.btn-default.active SMS Message
              input(type="radio", name="signupOptions", id="sendCode", value="sendCode", checked)
            label.btn.btn-default iOS App
              input(type="radio", name="signupOptions", id="iosApp", value="iosApp")
            label.btn.btn-default Andriod App
              input(type="radio", name="signupOptions", id="iosApp", value="androidApp")

